@model VG_Review.Models.Review

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <h1 class="display-4 mb-4 text-center text-dark-emphasis">Edit This Review:</h1>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-5 shadow">
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="ReviewId" />
                        <div class="mb-3">
                            <label asp-for="ReviewTitle" class="control-label">Review Title</label>
                            <input asp-for="ReviewTitle" class="form-control" />
                            <span asp-validation-for="ReviewTitle" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Content" class="control-label"></label>
                            <input asp-for="Content" class="form-control" />
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Rating" class="control-label"></label>
                            <select asp-for="Rating" class="form-control">
                                <option value="">Select a rating</option>
                                <option value="1">★</option>
                                <option value="2">★★</option>
                                <option value="3">★★★</option>
                                <option value="4">★★★★</option>
                                <option value="5">★★★★★</option>
                            </select>
                            <span asp-validation-for="Rating" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="hidden" asp-for="GameId" />
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary mt-5 mb-1"><i class="bi bi-floppy"></i> Save Game</button>
                            <a asp-controller="Game" asp-action="Index" class="btn btn-info"><i class="bi bi-arrow-left-circle"></i> Back to List of Games</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
