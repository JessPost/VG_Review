@model VG_Review.Models.Review

<h2>Delete Review</h2>

<p>Are you sure you want to delete this review?</p>

<div>
    <p>@Model.Content</p>
    <form asp-action="Delete" asp-controller="Review" asp-route-id="@Model.ReviewId" method="post">
        <input type="submit" value="Yes, Delete This Review" />
        <a asp-controller="Game" asp-action="Details" asp-route-id="@Model.GameId">Cancel</a>
    </form>
</div>