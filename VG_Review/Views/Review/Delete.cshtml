@model VG_Review.Models.Review

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-5 shadow">
                <div class="card-body">
                    <h2 class="card-title text-center">Delete This Review</h2>
                    <hr/>

                    <p class="card-text text-center text-warning"><strong>Are you sure you want to delete this review?</strong></p>

                    <div>
                        <p>Title: @Model.ReviewTitle</p>
                        <p>Content: @Model.Content</p>

                        <form asp-action="Delete" asp-controller="Review" asp-route-id="@Model.ReviewId" method="post" class="mt-4">
                            <div class="d-grid">
                                <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Delete Review</button>
                                <a asp-controller="Game" asp-action="Details" asp-route-id="@Model.GameId" class="btn btn-info mt-2"><i class="bi bi-arrow-left-circle"></i> Back to List of Games</a>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>