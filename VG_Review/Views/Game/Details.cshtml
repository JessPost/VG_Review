@model Game

<h2>Title: @Model.Title</h2>
<p>Description: @Model.Description</p>
<p>Genre: @Model.Genre</p>
<p>Developer: @Model.Developer</p>

<h4>Reviews</h4>
<hr />
@if (Model.Reviews != null && Model.Reviews.Any())
{
    foreach (var review in Model.Reviews)
    {
        <div>
            <p>@review.Content</p>
            <p>
                Rating:
                @for (int i = 0; i < review.Rating; i++)
                {
                    <text>★</text>
                }
            </p>
            <p>Review Date: @review.DateTime.ToString("d")</p>
            <a asp-action="Edit" asp-controller="Review" asp-route-id="@review.ReviewId">Edit This Review</a> |
            <a asp-action="Delete" asp-controller="Review" asp-route-id="@review.ReviewId">Delete This Review</a>
            <hr />
        </div>
    }
}
else
{
    <p>No reviews yet.</p>
}

<a asp-controller="Review" asp-action="Create" asp-route-gameId="@Model.GameId">Add a Review to This Game</a> |
<a asp-action="Index">Back to List of Games</a>