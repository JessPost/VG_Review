@model Game

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-5 shadow">
                <div class="card-body">
                    <h2 class="card-title display-5"><i>"@Model.Title"</i></h2>
                    <p class="card-text"><strong><u>Description:</u></strong> &ensp;@Model.Description</p>
                    <p class="card-text"><strong><u>Genre:</u></strong> &ensp;@Model.Genre</p>
                    <p class="card-text"><strong><u>Developer:</u></strong> &ensp;@Model.Developer</p>
                    <p class="card-text"><strong><u>Price:</u></strong> &ensp;$@Model.Price</p>
                    <hr />
                    <h4 class="mt-4 text-center text-muted"><u>Reviews:</u></h4>
                    @if (Model.Reviews != null && Model.Reviews.Any())
                    {
                        foreach (var review in Model.Reviews)
                        {
                            <div class="card mb-2 border-2 shadow">
                                <div class="card-body">
                                    <h5 class="card-text">@review.ReviewTitle</h5>
                                    <p class="card-text">@review.Content</p>
                                    <p class="card-text">
                                        <strong>Rating:</strong>
                                        @for (int i = 0; i < review.Rating; i++)
                                        {
                                            <text>★</text>
                                        }
                                    </p>
                                    <p class="card-text"><strong>Review Date:</strong> @review.DateTime.ToString("d")</p>
                                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                        <a asp-action="Edit" asp-controller="Review" asp-route-id="@review.ReviewId" class="btn btn-warning"><i class="bi bi-pencil"></i> Edit Review</a>
                                        <a asp-action="Delete" asp-controller="Review" asp-route-id="@review.ReviewId" class="btn btn-danger"><i class="bi bi-trash3"></i> Delete Review</a>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="card mb-2 border-2 shadow">
                            <div class="card-body">
                                <h3 class="text-center">This game has no reviews yet.</h3>
                            </div>
                        </div>
                    }
                    <div class="mt-4 d-flex justify-content-center">
                        <a asp-controller="Review" asp-action="Create" asp-route-gameId="@Model.GameId" class="btn btn-success me-4"><i class="bi bi-plus-square"></i> Review This Game</a>
                        <a asp-action="Index" class="btn btn-info "><i class="bi bi-arrow-left-circle"></i> Back to List of Games</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>