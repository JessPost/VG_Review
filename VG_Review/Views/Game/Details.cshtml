@model Game

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body">
                    <h2 class="card-title">Title: @Model.Title</h2>
                    <p class="card-text">Description: @Model.Description</p>
                    <p class="card-text">Genre: @Model.Genre</p>
                    <p class="card-text">Developer: @Model.Developer</p>

                    <h4 class="mt-4 text-center">Player Reviews:</h4>
                    <hr />

                    @if (Model.Reviews != null && Model.Reviews.Any())
                    {
                        foreach (var review in Model.Reviews)
                        {
                            <div class="card mb-3 shadow-lg">
                                <div class="card-body">
                                    <p class="card-text">@review.Content</p>
                                    <p class="card-text">
                                        Rating:
                                        @for (int i = 0; i < review.Rating; i++)
                                        {
                                            <text>★</text>
                                        }
                                    </p>
                                    <p class="card-text">Review Date: @review.DateTime.ToString("d")</p>
                                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                        <a asp-action="Edit" asp-controller="Review" asp-route-id="@review.ReviewId" class="btn btn-primary me-md-2">Edit This Review</a>
                                        <a asp-action="Delete" asp-controller="Review" asp-route-id="@review.ReviewId" class="btn btn-danger">Delete This Review</a>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <h3>This game has no reviews yet.</h3>
                    }

                    <div class="mt-4">
                        <a asp-controller="Review" asp-action="Create" asp-route-gameId="@Model.GameId" class="btn btn-primary me-2">Add a Review to This Game</a>
                        <a asp-action="Index" class="btn btn-secondary">Back to List of Games</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>