@model VG_Review.Models.Game

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-5 shadow">
                <div class="card-body">
                    <h1 class="card-title text-center">Delete This Game</h1>
                    <div>
                        <hr />
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Title):
                            </dt>
                            <dd class="col-sm-10">
                                <i>"@Html.DisplayFor(model => model.Title)"</i>
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Description):
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Description)
                            </dd>
                        </dl>
                        <form asp-action="Delete" class="mt-4">
                            <input type="hidden" asp-for="GameId" />
                            <div class="d-grid">
                                <h3 class="card-text text-center mt-5 mb-2">Are you sure you want to delete this?</h3>
                                <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Delete Game</button>
                                <a asp-action="Index" class="btn btn-info mt-2"><i class="bi bi-arrow-left-circle"></i> Back to List</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>